@page
@model StackOverflow.Web.Pages.Account.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="auth-page">
    <div class="auth-hero">
        <h1>Join the Stack Overflow community</h1>
        <div class="auth-benefits">
            <div class="auth-benefit">
                <svg width="26" height="26" viewBox="0 0 26 26"><path fill="#0077cc" d="M12 .7a2 2 0 013 0l8.5 9.6a1 1 0 01-.7 1.7H4.2a1 1 0 01-.7-1.7z"/><path fill="#0077cc" opacity=".4" d="M20.6 16H6.4l-3.7 7.4a1 1 0 00.9 1.6h19.8a1 1 0 00.9-1.6z"/></svg>
                <span>Get unstuck â€” ask a question</span>
            </div>
            <div class="auth-benefit">
                <svg width="26" height="26" viewBox="0 0 26 26"><path fill="#0077cc" d="M6 4h14a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2zm1 3v2h12V7H7zm0 4v2h12v-2H7zm0 4v2h8v-2H7z"/></svg>
                <span>Unlock new privileges like voting and commenting</span>
            </div>
            <div class="auth-benefit">
                <svg width="26" height="26" viewBox="0 0 26 26"><path fill="#0077cc" d="M14.8 3a2 2 0 00-3.6 0l-2 4.1-4.5.7a2 2 0 00-1.1 3.4l3.3 3.2-.8 4.5a2 2 0 002.9 2.1L13 18.8l4 2.2a2 2 0 002.9-2.1l-.8-4.5 3.3-3.2a2 2 0 00-1.1-3.4l-4.5-.7z"/></svg>
                <span>Save your favorite questions and answers</span>
            </div>
            <div class="auth-benefit">
                <svg width="26" height="26" viewBox="0 0 26 26"><path fill="#0077cc" d="M13 1a12 12 0 100 24 12 12 0 000-24zm-1.5 17.3L6.3 13l1.4-1.4 3.8 3.8 7.8-7.8 1.4 1.4z"/></svg>
                <span>Earn reputation and badges</span>
            </div>
        </div>
        <p class="auth-collab">Collaborate and share knowledge with a private group.</p>
    </div>

    <div class="auth-form-container">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="form-group">
                <label for="displayName">Display name</label>
                <input type="text" id="displayName" name="displayName" class="form-control" required autofocus />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="location">Location <span class="optional">(optional)</span></label>
                <input type="text" id="location" name="location" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign up</button>
        </form>

        <p class="auth-legal">
            By clicking "Sign up", you agree to our
            <a href="#">terms of service</a> and acknowledge you have read our
            <a href="#">privacy policy</a>.
        </p>
    </div>

    <div class="auth-alternate">
        Already have an account? <a href="/Account/Login">Log in</a>
    </div>
</div>
