@page "{id:int}"
@model StackOverflow.Web.Pages.Questions.EditModel
@{
    ViewData["Title"] = "Edit Question";
}

<div class="ask-page">
    <h1>Edit Question</h1>

    <div class="ask-form-container">
        <form method="post" class="ask-form">
            <div class="form-section">
                <label for="Title">Title</label>
                <p class="form-hint">Be specific and imagine you're asking a question to another person.</p>
                <input type="text" id="Title" name="Input.Title" class="form-input"
                       value="@Model.Input?.Title" required />
                <span asp-validation-for="Input.Title" class="validation-error"></span>
            </div>

            <div class="form-section">
                <label for="Body">Body</label>
                <p class="form-hint">Include all the information someone would need to answer your question.</p>
                <textarea id="Body" name="Input.Body" class="form-textarea" rows="15"
                          required>@Model.Input?.Body</textarea>
                <span asp-validation-for="Input.Body" class="validation-error"></span>
            </div>

            <div class="form-section">
                <label for="Tags">Tags</label>
                <p class="form-hint">Add up to 5 tags to describe what your question is about (comma-separated).</p>
                <input type="text" id="Tags" name="Input.Tags" class="form-input"
                       value="@Model.Input?.Tags" />
                <span asp-validation-for="Input.Tags" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save edits</button>
                <a href="/Questions/Details/@Model.QuestionId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
