@page "{id:int}"
@model StackOverflow.Web.Pages.Questions.EditAnswerModel
@{
    ViewData["Title"] = "Edit Answer";
}

<div class="ask-page">
    <h1>Edit Answer</h1>

    <div class="ask-form-container">
        <form method="post" class="ask-form">
            <div class="form-section">
                <label for="Body">Body</label>
                <p class="form-hint">Update your answer below.</p>
                <textarea id="Body" name="Input.Body" class="form-textarea" rows="15"
                          required>@Model.Input?.Body</textarea>
                <span asp-validation-for="Input.Body" class="validation-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save edits</button>
                <a href="/Questions/Details/@Model.QuestionId#answer-@Model.AnswerId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
